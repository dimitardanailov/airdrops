# Build the docker image with `npx nx docker-build airdrops`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t airdrops`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system airdrops && \
          adduser --system -G airdrops airdrops

COPY dist/apps/airdrops airdrops
RUN chown -R airdrops:airdrops .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix airdrops --omit=dev -f install

CMD [ "node", "airdrops" ]
